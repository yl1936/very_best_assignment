<div class="card mb-3">
  <h2 class="card-header h4">
    Neighborhood #<%= neighborhood.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= neighborhood.name %></dd>

      <dt>City</dt>
      <dd><%= neighborhood.city %></dd>

      <dt>State</dt>
      <dd><%= neighborhood.state %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back neighborhood, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_neighborhood_url(neighborhood), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to neighborhood, method: :delete, data: { confirm: "Do you really want to delete this neighborhood?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(neighborhood.updated_at) %> ago
  </div>
</div>
