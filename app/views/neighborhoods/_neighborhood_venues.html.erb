<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Venues

    <a data-toggle="collapse" href="#neighborhood_venues_new_form">
      Add venue
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @neighborhood.venues.each do |venue| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to venue, venue %>

        <%= link_to venue, method: :delete, data: { confirm: "Do you really want to delete this venue" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="neighborhood_venues_new_form">
        <%= render partial: "neighborhoods/neighborhood_venues_new_form" %>
      </div>
    </div>

  </ul>
</div>
